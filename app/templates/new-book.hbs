<div class="new-book panel panel-default">
    <div class="panel-body">
        <form role="form" {{action "submitBook" on="submit"}}>
            <div class="book-upload col-md-6">
                <h1>Add new Book</h1>
                <label class="full-size">Title<br> {{input type="text" placeholder="Enter title" class="form-control" value=title}}
                </label>

                <p>

                <div class="control-group">
                    <label class="full-size">Author<br> {{input id="authors" type="text" placeholder="Enter author" class="form-control" value=authors }}
                    </label>
                </div>

                <p>
                    <label class="full-size">Publisher<br> {{input type="text" placeholder="Enter publisher" class="form-control" value=publisher}}
                    </label>
                </p>

                <p>
                    <label class="full-size">Year<br> {{input type="text" size="4" maxlength="4" placeholder="YYYY" class="form-control" value=year}}
                    </label>
                </p>
                <input type="submit" class="btn-lg button-coloring" value="Submit Book">
            </div>
        </form>
            <div class="cover-upload col-md-6">
                <div class="panel panel-default cover-upload-body">
                    <div class="panel-heading">
                        <h3 class="panel-title branding-background-color">Cover</h3>
                    </div>
                    <div class="panel-body">
                       <span class="btn btn-success fileinput-button">
                          <i class="glyphicon glyphicon-plus"></i>
                          <span>Add files...</span>
                          <input id="coverupload" type="file" name="file">
                       </span>

                    </div>
                </div>
            </div>
    </div>

</div>
